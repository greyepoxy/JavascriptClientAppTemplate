{
  "name": "textwrapper",
  "version": "0.0.1",
  "description": "Text Wrapper Kata",
  "main": "index.js",
  "dependencies": {
  },
  "devDependencies": {
    "babel": "^5.8.20",
    "babel-eslint": "^4.0.5",
    "babelify": "^6.1.3",
    "browserify": "^11.0.1",
    "eslint": "^1.0.0",
    "eslint-plugin-react": "^3.2.0",
    "mocha": "^2.2.5",
    "should": "^7.0.2"
  },
  "scripts": {
    "clean": "(IF exist build (rmdir /s /q build)) && mkdir build",
    "lint": "eslint source && eslint spec",
    "test": "npm run lint && mocha --compilers js:babel/register spec/**/*Spec.js",
    "build": "npm run clean && browserify source/app-client.js -t babelify > build/app-client.js",
    "check": "npm run lint && npm run build && npm test",
    "start": "npm run check && babel-node source/server.js",
    "validate": "npm run check && npm outdated --depth 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greyepoxy/TextWrapper.git"
  },
  "keywords": [
    "Kata"
  ],
  "author": "greyepoxy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/greyepoxy/TextWrapper/issues"
  },
  "homepage": "https://github.com/greyepoxy/TextWrapper#readme"
}
